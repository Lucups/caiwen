{% extends "CaiwenCoreBundle::layout.html.twig" %}

{% block content %}
    <div class="row marketing">
        <div class="col-lg-6 col-lg-offset-3 well">
            <form class="form-signin">
                <h2 class="form-signin-heading"><strong>重置密码</strong></h2>

                <p><input type="email" class="form-control" placeholder="请输入您的新密码" autofocus></p>

                <p><input type="text" class="form-control" placeholder="请确认输入您的新密码" autofocus></p>

                <p class="text-right">
                    <button class="btn btn-lg btn-primary btn-block" type="submit">确定</button>
                </p>
                <p class="text-right">
                    <a href="login.html">返回登录</a>
                </p>

            </form>
        </div>
    </div>
{% endblock %}