                <div class="form-group row">
                    <label for="inputEmail3" class="col-lg-2 control-label">问题描述</label>

                    <div class="col-lg-10">
                        <textarea class="form-control" rows="8"></textarea>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="inputEmail3" class="col-lg-2 control-label">附加图片</label>

                    <div class="col-lg-10">
                        <input type="file" class="form-control">
                    </div>
                </div>
                <div>
                    <button type="button" class="btn btn-primary pull-right">我要提问</button>
                </div>
            </form>
        </div>

    </div>
{% endblock %}