{% extends "CaiwenCoreBundle::layout.html.twig" %}

{% block content %}
    <div class="row marketing" style="margin-top:0px;">
        <div class="col-12">
            <h2>菜问问答</h2>
            <ol class="breadcrumb" id="bc-list">
            </ol>
            <hr>
        </div>

        <div class="col-lg-12 well" style="margin-top:20px;">
            <form>
                <div class="form-group row">
                    <label for="inputEmail3" class="col-lg-2 control-label">问题标题</label>

                    <div class="col-lg-10">
                        <input type="text" class="form-control" id="inputEmail3" placeholder="标题">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="inputEmail3" class="col-lg-2 control-label">问题描述</label>

                    <div class="col-lg-10">
                        <textarea class="form-control" rows="8"></textarea>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="inputEmail3" class="col-lg-2 control-label">附加图片</label>

                    <div class="col-lg-10">
                        <input type="file" class="form-control">
                    </div>
                </div>
                <div>
                    <button type="button" class="btn btn-primary pull-right">我要提问</button>
                </div>
            </form>
        </div>

    </div>
{% endblock %}

{% block js %}
    <script type="text/javascript">
        $('#bc-list').html(generateBC([
            ['{{ path('_index') }}', '菜问首页'],
            ['{{ path('_faq_list') }}', '菜问问答'],
            ['*', '我要提问']
        ]));
    </script>
{% endblock %}