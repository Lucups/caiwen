{% extends "CaiwenCoreBundle::layout.html.twig" %}

{% block content %}
    <div class="row marketing" style="margin-top:0px;">
        <div class="col-12">
            <h2>菜问问答</h2>
            <ol class="breadcrumb">
                <li><a href="index.html">菜问首页</a></li>
                <li><a href="index.html">菜问问答</a></li>
                <li class="active">我的提问</li>
            </ol>
            <hr>
        </div>

        <div class="col-lg-12 well" style="margin-top:20px;">
            <form>
                <div class="form-group row">
                    <label for="inputEmail3" class="col-lg-2 control-label">问题标题</label>

                    <div class="col-lg-10">
                        <input type="text" class="form-control" id="inputEmail3" placeholder="标题">
