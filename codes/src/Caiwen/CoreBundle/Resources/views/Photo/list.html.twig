{% extends "CaiwenCoreBundle::layout.html.twig" %}

{% block content %}
    <div class="row marketing" style="margin-top:0px;">
        <div class="col-12">
            <h2>{{ page_title }}</h2>
            <ol class="breadcrumb" id="bc-list">
            </ol>
            <hr>
            <form class="col-lg-6 pull-right" action="{{ path('_photo_search_list') }}">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="快速查找">
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="button">
                                    <span class="glyphicon glyphicon-search"></span>
                                </button>
                            </span>
                </div>
            </form>

        </div>

        <div class="col-lg-12 well" style="margin-top:20px;">
            {% for photo in photos %}
                <div class="col-6 col-sm-6 col-lg-4">
                    <p><img width="180px" height="180px" src="{{ asset('uploads/images/') }}{{ photo.imagePath }}" alt="..."
                            class="img-rounded img-responsive"></p>

                    <p class="text-center"><a href="{{ path('_photo_view', {album_id:photo.albumId, photo_id:photo.photoId}) }}">白菜虫害01</a></p>
                </div>
            {% endfor %}
        </div>

    </div>
{% endblock %}


{% block js %}
    <script type="text/javascript">
        $('#bc-list').html(generateBC([
            ['{{ path('_index') }}', '菜问首页'],
            ['*', '{{ page_title }}']
        ]));
    </script>
{% endblock %}